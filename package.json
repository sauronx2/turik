{
    "name": "turik",
    "version": "1.0.0",
    "description": "Mini tournament bracket with betting system",
    "main": "electron/main.cjs",
    "type": "module",
    "scripts": {
        "dev": "node server/index.js & cd client && npm run dev",
        "server": "node server/index.js",
        "client": "cd client && npm run dev",
        "install-all": "npm install && cd client && npm install",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:smoke": "vitest run tests/health-check.test.js",
        "test:contracts": "vitest run tests/socket-contracts.test.js",
        "prebuild": "npm run test:smoke",
        "electron:dev": "concurrently \"npm run server\" \"cd client && npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
        "electron:build": "npm run test && cd client && npm run build && cd .. && electron-builder",
        "electron:build:mac": "npm run test && cd client && npm run build && cd .. && electron-builder --mac",
        "electron:build:win": "npm run test && cd client && npm run build && cd .. && electron-builder --win",
        "electron:build:all": "npm run test && cd client && npm run build && cd .. && electron-builder -mw",
        "prepare": "husky install"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "socket.io": "^4.6.1"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@vitest/ui": "^3.2.4",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "electron": "^38.3.0",
        "electron-builder": "^26.0.12",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.4",
        "socket.io-client": "^4.8.1",
        "vitest": "^3.2.4",
        "wait-on": "^9.0.1"
    },
    "build": {
        "appId": "com.turik.app",
        "productName": "Турнір",
        "files": [
            "electron/**/*",
            "server/**/*",
            "client/dist/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "node_modules",
                "to": "node_modules",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "asar": false,
        "directories": {
            "buildResources": "electron/assets",
            "output": "dist-electron"
        },
        "mac": {
            "category": "public.app-category.sports",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                }
            ],
            "icon": "electron/icon.icns",
            "darkModeSupport": true,
            "artifactName": "${productName}-${version}-Mac-${arch}.${ext}"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "electron/icon.ico"
        },
        "dmg": {
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}
